/* pages/record/index.wxss */
page { background-color:#3B3E46; border-top:1rpx solid #4C4F56; height:clac(100vh - 1rpx); overflow:hidden}

.record-page { height:calc(100vh - 80rpx); margin-top:80rpx;  position: relative; font-size:24rpx; color:#C6C5CB; }
.container { padding:0; }

.record-page .playerMeeting { position: relative;}
.record-page .playerMeeting .swiper { height:562rpx;  text-align: center;}
.record-page .playerMeeting .swiper .img { width:100%; max-height: 100%;  height:100%; background-repeat: no-repeat; background-size:contain; background-position:center center;}
.record-page .playerMeeting .swiper .viedoImg .icon{ width:100%; height:100%; background:url(https://file.medyaya.cn/wx_mini/images/record-video-bg.png) no-repeat center center rgba(0,0,0,.6); background-size:116rpx;  }
.record-page .playerMeeting .swiper .video{ width:95%; height:100%; }

.flexBox{ display: flex; align-items: flex-end; justify-content: center;}
.flexRow { flex: 1; text-align: center;}

.record-page .commodity-attr-box .commodity-box-item { width:50%; }
.record-page .commodity-attr-box { color:#333;}

.record-meeting-player-progressBox,
.record-meeting-functionBox { padding:0 100rpx;}

.record-meeting-player-progressBox { display: flex; align-items: center; margin-top:34rpx;}
.record-meeting-player-progressBox .times { font-size:22rpx; margin-left:15rpx; }
.record-meeting-player-progressBox-scrubber { background:#282A30;  height:4rpx; flex: 1;}
.record-meeting-player-progressBox-scrubber .progress{ background:#ACE400 ;  height:4rpx; position: relative; max-width: 100%; }
.record-meeting-player-progressBox-scrubber .progressDot{ background:#ACE400; border-radius: 50%; width:12rpx; height:12rpx; position: absolute; right:-6rpx; top:50%; margin-top:-6rpx;  }

.record-meeting-timeArea-tips { text-align: center; margin:20rpx 0 16rpx; height:66rpx;}
.record-meeting-timeArea-tips-item { display: inline-block; color:#ACE400; background-color:#2B2F38; padding:16rpx 32rpx;border-radius: 8rpx;border: 2rpx solid #282A30; position: relative; min-width: 120rpx;}
.record-meeting-timeArea-tips-item .icon { position: absolute; width:0; height:0; bottom:-28rpx; border: 16rpx solid transparent; border-top-color: #2B2F38; left:50%; margin-left:-16rpx; content:''; }
.record-meeting-timeArea-times { text-align: center; font-weight: bold; font-size:40rpx; margin-bottom:25rpx; height:52rpx;}

.record-meeting-playState-play .icon { display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-player.png) no-repeat center center; width:106rpx; height:106rpx; background-size:106rpx; }
.record-meeting-playState-pause .icon { display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-player-pause.png) no-repeat center center; width:106rpx; height:106rpx; background-size:106rpx; }

.record-meeting-recordState-start { position: relative; }
.record-meeting-recordState-start .icon { display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-recording-animation.gif) no-repeat center center; width:154px; height:154rpx; background-size:142rpx;  position: relative; z-index: 5; }
.record-meeting-recordState-default .icon {display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-record.png) no-repeat center center; width:154px; height:154rpx; background-size:182rpx; }
.record-meeting-recordState-start .start-button-bg { display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-recordingBg.png) no-repeat center center; width:154rpx; height:154rpx; background-size:154rpx; position: absolute; top:0; left:50%; margin-left:-76rpx; z-index: 2; }

.record-meeting-resetState-reset .icon { display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-reset.png) no-repeat center center; width:106rpx; height:106rpx; background-size:106rpx;}

.record-page .full-stop-click { width:100%; height:100%; position: absolute; top:0; left:0; z-index: 10; background-color:transparent;}

.record-meeting-shareButton { position: absolute; bottom:50rpx; left:0; background-color:#262931; border-radius: 0 28rpx 28rpx 0; padding:0rpx 10rpx 0rpx 30rpx; height:48rpx;}
.record-meeting-shareButton .icon {display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-shareIcon.png) no-repeat center center; width:48rpx; height:48rpx; background-size:56rpx;}

.disabledButton { opacity: .3; }


.record-meeting-endMeetingBUtton { position: absolute; bottom:40rpx; right:-10rpx; height:48rpx; }
.record-meeting-endMeetingBUtton input{ }
.endButtonSlider { background-color:#2B2F38; border: 2rpx solid #282A30; height:48rpx; width:158rpx; border-radius: 48rpx; position: relative; top:-32rpx; }
.endButtonSlider .text { position: absolute; top:50%; margin-top:-12rpx; left:50%; margin-left:-40rpx; font-size:20rpx; }
.endButtonSlider .finish { width:100%; background:#ACE400; height:100%; position: absolute; left:0; top:0; border-radius: 48rpx; }
.endButtonSlider .buttonIcon { position: absolute; display: inline-block; width:56rpx; height:56rpx; top:-7rpx; background:url(https://file.medyaya.cn/wx_mini/images/endButton-icon.png) no-repeat center center ; border-radius: 50%;  z-index: 2; background-size: 48rpx; }

.record-meeting-endPage-button { padding:0 100rpx;}
.record-meeting-endPage-img { text-align: center; margin:160rpx 0;}
.record-meeting-endPage-img image{ width:304rpx; height:294rpx; }
.record-meeting-endPage-info { text-align: center; font-size:28rpx; color:#787C86; margin-bottom:80rpx;}
.record-meeting-endPage-info .title { margin-bottom:15rpx;}
.record-meeting-endPage-info .times { font-weight: bold; font-size:40rpx; color:#c6c5cb;}
.record-meeting-endPage-preview .icon { display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-preview.png) no-repeat center center; width:106rpx; height:106rpx; background-size:106rpx; }
.record-meeting-endPage-pageStyle .icon { display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-pageStyle.png) no-repeat center center; width:106rpx; height:106rpx; background-size:106rpx; }
.record-meeting-endPage-muisc .icon { display: inline-block; background:url(https://file.medyaya.cn/wx_mini/images/button-record-music.png) no-repeat center center; width:106rpx; height:106rpx; background-size:106rpx; }