                                <view class="meeting-card-pages">
                                    <view class="meeting-card-pages-current">1</view>
                                    <view class="space">|</view>
                                    <view class="meeting-card-pages-amount">30</view>
                                </view>
                            </view>
                            <view class="meeting-card-col-2">
                                <view class="meeting-card-status">录播中</view>
                                <button class="meeting-card-share clearButtonStyle" open-type="share"></button>
                            </view>
                        </view>
                    </view>
              </view>
          </swiper-item>

