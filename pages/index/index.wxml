  <!--卡片显示方式  -->
  <view class="meeting-card" hidden="{{isCardStatus==true}}" >
      <view class="meeting-card-pagination"> <view class="current">1</view> <view class="space">|</view>10</view>
      <!-- 轮播图 -->
      <swiper class="meeting-card-swiper" circular="true" autoplay="true" interval="3000" duration="500" indicator-color="rgba(255,255,255,.8)"
              indicator-active-color="#31c27c" bindchange='changeSwiper'>

          <swiper-item data-id="{{item.id}}" data-url="{{item.linkUrl}}" >
              <view class="meeting-card-item">
                  <view class="meeting-card-img"><image src="https://file.medyaya.cn/course/100712/ppt/17121115311202646656.jpg" class="img" /></view>
                    <view class="meeting-card-main">
                        <view class="meeting-card-title">如何开展个性化糖料病</view>
                        <view class="meeting-card-row">
                            <view class="meeting-card-col-2">
